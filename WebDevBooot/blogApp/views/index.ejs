<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
      <h1>Blog App Index Page</h1>
  </div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% for(var i = 0; i< blogs.length; i++){ %>
        <div class="item">
          <div class="image">
            <img src="<%= blogs[i].image %>" >
          </div>
          <div class="content">
            <a class="header" href="/blogs/<%=blogs[i].id%>"> <%= blogs[i].title %> </a>
            <div class="meta">
              <p><%= blogs[i].created.toDateString(); %></p>              
            </div>
            <div class="description">
              <p><%- blogs[i].body.substring(0,100); %>...</p>
            </div>
            <div class="extra">
              <a class ="ui basic floated green button"href="/blogs/<%=blogs[i]._id %>">
                view post
                <i class="right chevron icon"></i>
              </a>
            </div>
          </div>
        </div>
      <% }; %>
    </div>
  </div>
</div>

  





<% include partials/footer %>
