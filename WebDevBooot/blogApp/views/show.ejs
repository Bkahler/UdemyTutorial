<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    <%= blog.title%>
  </div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%=blog.image%>"></img>
      <div class="content" >
        <p><%=blog.created.toDateString();%></p>
      </div>      
      <div class="description" >
        <p><%-blog.body%></p> 
      </div>
      <a class="ui orange basic button" href="/blogs/<%=blog.id %>/edit">edit</a>
      <form action="/blogs/<%=blog._id%>?_method=DELETE" class="inlineForm" method="POST">
        <button class="ui red basic button ">Delete</button>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>
